<h1>Login</h1>

<%= form_for @user_session do |f| %>
	<%= render "shared/error_messages", :target => @user_session %>
	
	<div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </div>
  <div class="field">
  	<%= f.label :password %><br />
  	<%= f.password_field :password  %>
  </div>
	<div class="field">
  	<%= f.submit "Login" %><br />
  </div>
<% end %>