<!DOCTYPE html>
<html>
<head>
  <title>Routine</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<header>
	<div id="usernav">
		<% if current_user %>
			<%= link_to current_user.username, edit_user_path(:current) %> | 
			<%= link_to "Logout", logout_path %>		
		<% else %>
			<%= link_to "Register", new_user_path %> | 
			<%= link_to "Login", login_path %>	
		<% end %>

	</div>
	<nav>
		<%= link_to 'Workouts', workouts_path %> |
		<%= link_to 'Exercises', exercises_path %> |
		<%= link_to 'Muscles', muscles_path %> | 
		<%= link_to 'Muscle Groups', muscle_groups_path %>
	</nav>
</header>

<%= yield %>

</body>
</html>
